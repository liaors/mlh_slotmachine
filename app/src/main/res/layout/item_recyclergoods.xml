<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="177dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen6"
    android:layout_marginLeft="@dimen/dimen3"
    android:layout_marginRight="@dimen/dimen3"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen175"
            tools:context="me.chunyu.spike.wcl_flip_anim_demo.MainActivity">

            <ImageView
                android:id="@+id/code_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen175"
                android:clickable="true"
                android:scaleType="fitXY"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/goods_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen175"
                android:scaleType="fitXY"
                android:src="@mipmap/default_image"
                android:transitionName="img" />
        </FrameLayout>

        <TextView
            android:id="@+id/discription_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen12"
            android:layout_marginTop="@dimen/dimen6"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="明星变色润唇膏 Dior/迪奥"
            android:textColor="@color/color_1e1e1e"
            android:textSize="@dimen/dimen12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen12"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="￥955.00"
                android:textColor="@color/color_dd2450"
                android:textSize="@dimen/dimen15sp" />

            <LinearLayout
                android:id="@+id/buy_phone_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dimen50"
                    android:layout_height="@dimen/dimen14"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dimen10"
                    android:background="@drawable/black_stroke"
                    android:gravity="center"
                    android:text="@string/phoneBuy"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen10sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>