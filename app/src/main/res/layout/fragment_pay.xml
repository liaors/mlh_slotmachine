<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen0.5"
        android:layout_marginLeft="@dimen/dimen30"
        android:layout_marginRight="@dimen/dimen30"
        android:layout_marginTop="@dimen/dimen23"
        android:background="@color/color_b4b4b4" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen122"
        android:layout_marginLeft="@dimen/dimen30"
        android:layout_marginRight="@dimen/dimen30">

        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/dimen100"
            android:layout_height="@dimen/dimen100"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@mipmap/default_image" />


        <TextView
            android:id="@+id/name_tv"
            android:layout_width="@dimen/dimen164"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen13"
            android:layout_marginTop="@dimen/dimen10"
            android:layout_toRightOf="@+id/img"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:text="明星变色润唇膏 Dior/迪奥润唇膏变
色润唇膏"
            android:textColor="@color/color_1e1e1e"
            android:textSize="@dimen/dimen15sp" />

        <TextView
            android:id="@+id/goods_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_tv"
            android:layout_marginLeft="@dimen/dimen13"
            android:layout_marginTop="@dimen/dimen4"
            android:layout_toRightOf="@+id/img"
            android:includeFontPadding="false"
            android:text="共3件商品"
            android:textColor="@color/color_969696"
            android:textSize="@dimen/dimen11sp" />

        <TextView
            android:id="@+id/order_no_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/goods_num_tv"
            android:layout_marginLeft="@dimen/dimen13"
            android:layout_marginTop="@dimen/dimen8"
            android:layout_toRightOf="@+id/img"
            android:includeFontPadding="false"

            android:text="订单号M10076232224456464116"
            android:textColor="@color/color_1e1e1e"
            android:textSize="@dimen/dimen11sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img"
            android:layout_marginLeft="@dimen/dimen13"
            android:layout_toRightOf="@+id/img"
            android:includeFontPadding="false"
            android:text="正在等待支付"
            android:textColor="@color/color_dd2450"
            android:textSize="@dimen/dimen16sp" />

        <TextView
            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img"
            android:layout_alignParentRight="true"
            android:includeFontPadding="false"
            android:text="￥12055.00"
            android:textColor="@color/color_dd2450"
            android:textSize="@dimen/dimen25sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen0.5"
        android:layout_marginLeft="@dimen/dimen30"
        android:layout_marginRight="@dimen/dimen30"
        android:background="@color/color_b4b4b4" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen60">

        <ImageView
            android:id="@+id/pay_max_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/weichat_max" />

        <TextView
            android:id="@+id/pay_max_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pay_max_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen14"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/wechat_max_hint_str"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen15sp" />

        <ImageView
            android:id="@+id/min_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/pay_max_img"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen84"
            android:clickable="true"
            android:src="@mipmap/ali_min" />

        <TextView
            android:id="@+id/min_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/min_img"
            android:layout_marginRight="@dimen/dimen73"
            android:clickable="true"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingTop="@dimen/dimen15"
            android:text="使用支付宝付款"
            android:textColor="@color/color_969696"
            android:textSize="@dimen/dimen8sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bottom_left_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/weipay" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/dimen17"
            android:paddingRight="@dimen/dimen17"
            android:text=">"
            android:textColor="@color/color_1e1e1e"
            android:textSize="@dimen/dimen20sp" />

        <ImageView
            android:id="@+id/bottom_right_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/weixin_scan_icon" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen40"
        android:gravity="right"
        android:layout_marginBottom="@dimen/dimen34"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/give_up_pay_tv"
            android:layout_width="@dimen/dimen170"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:clickable="true"
            android:gravity="center"
            android:text="放弃支付"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen16sp" />

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen14"
            android:layout_marginRight="@dimen/dimen50"
            android:gravity="center"
            android:text="剩120秒自动关闭"
            android:textColor="@color/color_1e1e1e"
            android:textSize="@dimen/dimen16sp" />
    </LinearLayout>

</LinearLayout>