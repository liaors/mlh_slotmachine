<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen320"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/radius12_white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginBottom="@dimen/dimen20"
        android:layout_marginLeft="@dimen/dimen16"
        android:layout_marginRight="@dimen/dimen16"
        android:layout_marginTop="@dimen/dimen20"
        android:text="放弃本次支付，购物车商品将会清空，确定放弃本次支付吗？"
        android:textColor="@color/color_1e1e1e"
        android:textSize="@dimen/dimen19sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen0.5"
        android:background="@color/color_b4b4b4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/confirm_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:background="?attr/selectableItemBackground"
            android:text="@string/confirm_str"
            android:textColor="@color/color_1e1e1e"
            android:textSize="16sp" />

        <View
            android:layout_width="@dimen/dimen0.5"
            android:layout_height="match_parent"
            android:background="@color/color_b4b4b4" />

        <TextView
            android:id="@+id/cancel_tv"
            android:layout_width="0dp"
            android:background="?attr/selectableItemBackground"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:text="@string/cancel_str"
            android:textColor="@color/color_1e1e1e"
            android:textSize="16sp" />

    </LinearLayout>
</LinearLayout>