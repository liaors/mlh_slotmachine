<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen51"
        android:layout_marginTop="@dimen/dimen155"
        android:includeFontPadding="false"
        android:text="输入手机号码买单"
        android:textColor="@color/color_1e1e1e"
        android:textSize="@dimen/dimen23sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dimen51"
        android:layout_marginRight="@dimen/dimen51"
        android:layout_marginTop="@dimen/dimen18"
        android:layout_weight="1"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/phone_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen40"
            android:layout_weight="1"
            android:background="@drawable/color969696_stroke"
            android:hint="请输入手机号码"
            android:inputType="phone"
            android:maxLines="1"
            android:paddingLeft="@dimen/dimen12"
            android:textCursorDrawable="@drawable/shap_cursor"
            android:textSize="@dimen/dimen18sp" />

        <Button
            android:id="@+id/confirm_bt"
            android:layout_width="@dimen/dimen88"
            android:layout_height="@dimen/dimen40"
            android:layout_marginLeft="@dimen/dimen4"
            android:background="@drawable/solid_b4_to_dd2450"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen18sp" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen265"
        android:background="@color/color_f0f0f0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen51"
            android:layout_marginTop="@dimen/dimen26"
            android:text="其它业务"
            android:textColor="@color/color_1e1e1e"
            android:textSize="@dimen/dimen23sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dimen6"
            android:layout_marginRight="@dimen/dimen57"
            android:layout_marginTop="@dimen/dimen64"
            android:orientation="vertical">

            <Button
                android:id="@+id/print_bill_bt"
                android:layout_width="@dimen/dimen143"
                android:layout_height="@dimen/dimen46"
                android:background="@drawable/color1e1e1e_stroke"
                android:gravity="center"
                android:text="补打小票"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen18sp" />

            <TextView
                android:layout_width="@dimen/dimen100"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen9"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="在专柜通过快付下的订单可以在本机扫码买单"
                android:textColor="@color/color_464646"
                android:textSize="@dimen/dimen9sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="206dp"
            android:layout_marginTop="@dimen/dimen64"
            android:orientation="vertical">

            <Button
                android:id="@+id/goshop_bt"
                android:layout_width="@dimen/dimen143"
                android:layout_height="@dimen/dimen46"
                android:background="@color/black"
                android:gravity="center"
                android:text="自主购物"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen18sp" />

            <TextView
                android:layout_width="@dimen/dimen100"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen9"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="在专柜通过快付下的订单可以在本机扫码买单"
                android:textColor="@color/color_464646"
                android:textSize="@dimen/dimen9sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dimen27"
            android:layout_marginLeft="@dimen/dimen28"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:src="@mipmap/back_login" />

            <TextView
                android:id="@+id/time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen12"
                android:text="剩余操作时长360秒"
                android:textColor="@color/color_646464"
                android:textSize="@dimen/dimen13sp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>