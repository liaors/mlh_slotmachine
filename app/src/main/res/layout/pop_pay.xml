<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#01000000"
    android:orientation="vertical">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#10000000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">


        <TextView
            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen44"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:text="0.00元"
            android:textColor="@color/color_dd2450"
            android:textSize="@dimen/dimen18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen44"
            android:layout_marginLeft="@dimen/dimen16"
            android:gravity="center"
            android:text="支付"
            android:textColor="@color/color_1e1e1e"
            android:textSize="@dimen/dimen18sp" />

        <ImageView
            android:id="@+id/dismiss_img"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen44"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:onClick="onClickView"
            android:paddingLeft="@dimen/dimen30"
            android:paddingRight="@dimen/dimen16"
            android:src="@mipmap/delete_circler" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen0.5"
            android:layout_below="@+id/price_tv"
            android:background="@color/color_969696" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/price_tv"
            android:layout_marginBottom="@dimen/dimen80"
            android:layout_marginTop="@dimen/dimen80"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen180"
                android:layout_marginLeft="@dimen/dimen16"
                android:layout_weight="1"
                android:background="@drawable/color969696_stroke"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="本机支付"
                    android:textColor="@color/color_1e1e1e"
                    android:textSize="@dimen/dimen18sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dimen16"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/weichatpay_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:drawablePadding="@dimen/dimen4"
                        android:drawableTop="@mipmap/wechat_icon"
                        android:gravity="center"
                        android:onClick="onClickView"
                        android:text="微信支付"
                        android:textColor="@color/color_1e1e1e"
                        android:textSize="@dimen/dimen16" />

                    <TextView
                        android:id="@+id/alipay_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen15"
                        android:clickable="true"
                        android:drawablePadding="@dimen/dimen4"
                        android:drawableTop="@mipmap/alipay_icon"
                        android:gravity="center"
                        android:onClick="onClickView"
                        android:text="支付宝支付"
                        android:textColor="@color/color_1e1e1e"
                        android:textSize="@dimen/dimen16" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen180"
                android:layout_marginLeft="@dimen/dimen15"
                android:layout_marginRight="@dimen/dimen15"
                android:gravity="center"
                android:text="或"
                android:textColor="@color/color_1e1e1e"
                android:textSize="@dimen/dimen20sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen180"
                android:layout_marginRight="@dimen/dimen16"
                android:layout_weight="1"
                android:background="@drawable/color969696_stroke"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/wechet_ali_code_pay_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:drawableBottom="@mipmap/code_icon"
                    android:drawablePadding="@dimen/dimen14"
                    android:onClick="onClickView"
                    android:text="手机扫码支付"
                    android:textColor="@color/color_1e1e1e"
                    android:textSize="@dimen/dimen18sp" />

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>