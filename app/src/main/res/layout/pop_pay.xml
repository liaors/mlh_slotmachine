<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:orientation="vertical">
    <View
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:alpha="0.3"
        android:background="@color/color_b4b4b4" />

    <RelativeLayout
        android:id="@+id/paypop_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen44"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:text="0.00元"
            android:textColor="@color/color_dd2450"
            android:textSize="@dimen/dimen18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen44"
            android:layout_marginLeft="@dimen/dimen16"
            android:gravity="center"
            android:text="支付"
            android:textColor="@color/color_1e1e1e"
            android:textSize="@dimen/dimen18sp" />

        <ImageView
            android:id="@+id/dismiss_img"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen44"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:onClick="onClickView"
            android:paddingLeft="@dimen/dimen30"
            android:paddingRight="@dimen/dimen16"
            android:src="@mipmap/delete_circler" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen0.5"
            android:layout_below="@+id/price_tv"
            android:background="@color/color_969696" />

        <LinearLayout
            android:id="@+id/pay_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/price_tv"
            android:layout_marginTop="@dimen/dimen80"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen180"
                android:layout_marginLeft="@dimen/dimen16"
                android:layout_weight="1"
                android:background="@drawable/color969696_stroke"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="本机支付"
                    android:textColor="@color/color_323232"
                    android:textSize="@dimen/dimen18sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dimen16"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/weichatpay_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:drawablePadding="@dimen/dimen4"
                        android:drawableTop="@mipmap/wechat_icon"
                        android:gravity="center"
                        android:onClick="onClickView"
                        android:text="微信支付"
                        android:textColor="@color/color_646464"
                        android:textSize="@dimen/dimen10" />

                    <TextView
                        android:id="@+id/alipay_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen15"
                        android:clickable="true"
                        android:drawablePadding="@dimen/dimen4"
                        android:drawableTop="@mipmap/alipay_icon"
                        android:gravity="center"
                        android:onClick="onClickView"
                        android:text="支付宝支付"
                        android:textColor="@color/color_646464"
                        android:textSize="@dimen/dimen10" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen180"
                android:layout_marginLeft="@dimen/dimen15"
                android:layout_marginRight="@dimen/dimen15"
                android:gravity="center"
                android:text="或"
                android:textColor="@color/color_1e1e1e"
                android:textSize="@dimen/dimen20sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen180"
                android:layout_marginRight="@dimen/dimen16"
                android:layout_weight="1"
                android:background="@color/color_f0f0f0"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机扫码支付"
                    android:textColor="@color/color_323232"
                    android:textSize="@dimen/dimen18sp" />

                <LinearLayout
                    android:id="@+id/wechat_code_ll"
                    android:layout_width="@dimen/dimen200"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen10"
                    android:background="@color/white"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dimen8"
                    android:paddingTop="@dimen/dimen8">

                    <ImageView
                        android:layout_width="@dimen/dimen35"
                        android:layout_height="@dimen/dimen35"
                        android:layout_marginLeft="@dimen/dimen20"
                        android:src="@mipmap/wechat_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dimen16"
                        android:text="微信二维码"
                        android:textColor="@color/color_646464"
                        android:textSize="@dimen/dimen10"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ali_code_ll"
                    android:layout_width="@dimen/dimen200"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen10"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dimen8"
                    android:paddingTop="@dimen/dimen8">

                    <ImageView
                        android:layout_width="@dimen/dimen35"
                        android:layout_height="@dimen/dimen35"
                        android:layout_marginLeft="@dimen/dimen20"
                        android:src="@mipmap/alipay_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dimen16"
                        android:text="支付宝二维码"
                        android:textColor="@color/color_646464"
                        android:textSize="@dimen/dimen10" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/time1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/pay_ll"
            android:layout_marginBottom="@dimen/dimen60"
            android:layout_marginRight="@dimen/dimen16"
            android:layout_marginTop="@dimen/dimen20"
            android:text="@string/time_hint_str"
            android:textColor="@color/color_646464"
            android:textSize="@dimen/dimen16sp" />

    </RelativeLayout>

    <include layout="@layout/pop_paycode" />

</LinearLayout>