<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_head" />

    <com.maoye.mlh_slotmachine.widget.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen220"
        app:banner_default_image="@mipmap/default_banner"
        app:delay_time="3000"
        app:image_scale_type="fit_xy"
        app:indicator_drawable_selected="@drawable/shape_selected"
        app:indicator_drawable_unselected="@drawable/shape_noraml"
        app:indicator_margin="@dimen/dimen10"
        app:is_auto_play="true" />

    <Button
        android:id="@+id/quick_pay_print_bt"
        android:layout_width="@dimen/dimen308"
        android:layout_height="@dimen/dimen66"
        android:paddingLeft="@dimen/dimen22"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen143"
        android:background="@color/black"
        android:drawablePadding="@dimen/dimen8"
        android:drawableLeft="@mipmap/quickpay_icon"
        android:gravity="center_vertical"
        android:text="茂乐惠快付小程序补打小票"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen18sp" />

    <Button
        android:id="@+id/mlhj_print_bt"
        android:layout_width="@dimen/dimen308"
        android:layout_height="@dimen/dimen66"
        android:paddingLeft="@dimen/dimen22"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen41"
        android:background="@drawable/color1e1e1e_stroke"
        android:drawablePadding="@dimen/dimen8"
        android:drawableLeft="@mipmap/maolehui_icon"
        android:gravity="center_vertical"
        android:text="茂乐惠机器订单补打小票"
        android:textColor="@color/color_1e1e1e"
        android:textSize="@dimen/dimen18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <ImageButton
        android:id="@+id/back_bt"
        android:layout_width="wrap_content"
        android:layout_marginBottom="@dimen/dimen27"
        android:layout_marginLeft="@dimen/dimen27"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:src="@mipmap/back_login"/>
</LinearLayout>