<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen20"
    android:layout_marginRight="@dimen/dimen20"
    android:layout_marginTop="@dimen/dimen17"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/head_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/goods_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="明星变色润唇膏 Dior/迪奥润唇膏明星变色变"
            android:textColor="@color/color_1e1e1e"
            android:textSize="@dimen/dimen14sp" />

        <TextView
            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="￥155.00"
            android:textColor="@color/color_1e1e1e"
            android:textSize="@dimen/dimen16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/code_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head_layout"
        android:layout_marginTop="@dimen/dimen16"
        android:drawableLeft="@mipmap/code"
        android:drawablePadding="@dimen/dimen12"
        android:gravity="center"
        android:text="001115559893"
        android:textColor="@color/color_646464"
        android:textSize="@dimen/dimen13sp" />

    <TextView
        android:id="@+id/goods_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/head_layout"
        android:layout_marginTop="@dimen/dimen16"
        android:gravity="center"
        android:text="x1"
        android:textColor="@color/color_646464"
        android:textSize="@dimen/dimen13sp" />

    <View
        android:layout_below="@+id/code_tv"
        android:layout_marginTop="@dimen/dimen20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen1"
        android:layout_marginBottom="@dimen/dimen3"
        android:layerType="software"
        android:background="@drawable/dotline_1e1e1e" />

</RelativeLayout>