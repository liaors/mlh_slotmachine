<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen122"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/select_img"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/dimen33"
       android:src="@drawable/deliverytypeselect"
        android:gravity="center"
        android:paddingRight="@dimen/dimen18" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/dimen100"
        android:layout_height="@dimen/dimen100"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/select_img"
        android:scaleType="fitXY"
        android:src="@mipmap/default_image" />

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen16"
        android:layout_marginTop="@dimen/dimen21"
        android:layout_toRightOf="@+id/img"
        android:text="明星变色润唇膏 Dior/迪奥润唇膏"
        android:textColor="@color/color_1e1e1e"
        android:textSize="@dimen/dimen15sp" />

    <TextView
        android:id="@+id/specification_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen16"
        android:layout_toRightOf="@+id/img"
        android:text="x,红色"
        android:textColor="@color/color_646464"
        android:textSize="@dimen/dimen14sp" />

    <TextView
        android:id="@+id/price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dimen21"
        android:layout_marginLeft="@dimen/dimen16"
        android:layout_toRightOf="@+id/img"
        android:text="￥1655.00"
        android:textColor="@color/color_dd2450"
        android:textSize="@dimen/dimen19sp" />

    <LinearLayout
        android:layout_width="@dimen/dimen103"
        android:layout_height="@dimen/dimen20"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/dimen21"
        android:layout_marginRight="@dimen/dimen31"
        android:background="@drawable/color646464_stroke"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/subtract_tv"
            android:layout_width="@dimen/dimen30"
            android:layout_height="match_parent"
            android:gravity="center"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:text="-"
            android:textColor="@color/color_323232"
            android:textSize="@dimen/dimen12sp" />

        <View
            android:layout_width="@dimen/dimen0.5"
            android:layout_height="match_parent"
            android:background="@color/color_646464" />

        <TextView
            android:id="@+id/num_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/color_323232"
            android:textSize="@dimen/dimen15sp" />
        <View
            android:layout_width="@dimen/dimen0.5"
            android:layout_height="match_parent"
            android:background="@color/color_646464" />
        <TextView
            android:id="@+id/add_tv"
            android:clickable="true"
            android:layout_width="@dimen/dimen30"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:text="+"
            android:textColor="@color/color_323232"
            android:textSize="@dimen/dimen12sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen0.5"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dimen33"
        android:layout_marginRight="@dimen/dimen33"
        android:background="@color/color_b4b4b4" />

</RelativeLayout>