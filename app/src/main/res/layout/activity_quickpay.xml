<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_head" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen1"
        android:background="@color/color_b4b4b4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen105"
        android:background="@color/color_f2f2f2"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dimen7"
                android:drawableTop="@mipmap/inputphone_icon"
                android:gravity="center"
                android:text="①输入手机号码"
                android:textColor="@color/color_323232"
                android:textSize="@dimen/dimen8sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dimen10"
                android:layout_marginLeft="@dimen/dimen35"
                android:layout_marginRight="@dimen/dimen45"
                android:src="@mipmap/arrow_icon" />

            <TextView
                android:id="@+id/flow2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dimen7"
                android:drawableTop="@mipmap/a4"
                android:gravity="center"
                android:text="②选择支付方式"
                android:textColor="@color/color_323232"
                android:textSize="@dimen/dimen8sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dimen10"
                android:layout_marginLeft="@dimen/dimen35"
                android:layout_marginRight="@dimen/dimen45"
                android:src="@mipmap/arrow_icon" />

            <TextView
                android:id="@+id/flow3_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dimen7"
                android:drawableTop="@mipmap/a5"
                android:gravity="center"
                android:text="⑤完成打小票"
                android:textColor="@color/color_323232"
                android:textSize="@dimen/dimen8sp" />
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

</LinearLayout>