<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <View
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:alpha="0.3"
        android:background="@color/color_b4b4b4" />

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen12"
            android:text="扫码支付"
            android:textColor="@color/color_1e1e1e"
            android:textSize="@dimen/dimen23sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen30"
            android:layout_marginTop="@dimen/dimen30"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/wechatpay_code_img"
                    android:layout_width="@dimen/dimen200"
                    android:layout_height="@dimen/dimen200"
                    android:src="@mipmap/default_image" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信二维码"
                    android:textColor="@color/color_1e1e1e"
                    android:textSize="@dimen/dimen17sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ali_code_img"
                    android:layout_width="@dimen/dimen200"
                    android:layout_height="@dimen/dimen200"
                    android:src="@mipmap/default_image" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付宝二维码"
                    android:textColor="@color/color_1e1e1e"
                    android:textSize="@dimen/dimen17sp" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen27"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/pop_giveup_bt"
                    android:layout_width="@dimen/dimen138"
                    android:layout_height="@dimen/dimen40"
                    android:layout_gravity="center"
                    android:background="@drawable/color1e1e1e_stroke"
                    android:gravity="center"
                    android:text="放弃支付"
                    android:textColor="@color/color_1e1e1e" />
                <Button
                    android:id="@+id/confirm_bt"
                    android:layout_marginLeft="@dimen/dimen8"
                    android:layout_width="@dimen/dimen138"
                    android:layout_height="@dimen/dimen40"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:background="@color/black"
                    android:gravity="center"
                    android:text="已支付，打印小票"
                    android:textColor="@color/white" />
            </LinearLayout>

            <TextView
                android:id="@+id/pop_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen30"
                android:text="@string/time_hint_str"
                android:textColor="@color/color_1e1e1e"
                android:textSize="@dimen/dimen14sp" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>